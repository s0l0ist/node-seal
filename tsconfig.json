{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./tsc-out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./tsc-out",
    "paths": {
      "seal_*": ["./src/bin/seal_*"],
      "*.json": ["./src/*.json"]
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": false,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "typeRoots": ["./src/custom_types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./tsc-out/**/*", "./src/__tests__/**/*"],
}
