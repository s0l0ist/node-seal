{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "paths": {
      "./seal_*": ["./src/bin/seal_*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/bin", "src/__tests__"]
}